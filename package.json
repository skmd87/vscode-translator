{
  "name": "translator",
  "displayName": "translator",
  "description": "private project",
  "version": "0.0.1",
  "publisher": "Samer Draidi",
  "repository": {
    "type": "git",
    "url": "https://github.com/skmd87/vscode-translator"
  },
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:vue"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "translator.new",
        "title": "New Translation"
      },
      {
        "command": "translator.edit",
        "title": "Edit Translation",
        "category": "Translator",
        "icon": {
          "light": "./resources/light/edit.svg",
          "dark": "./resources/dark/edit.svg"
        }
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "translator.new",
          "alt": "markdown.showPreviewToSide",
          "group": "1_modification"
        }
      ]
    },
    "keybindings": [
      {
        "command": "translator.new",
        "key": "ctrl+t",
        "mac": "cmd+t",
        "when": "editorHasSelection"
      }
    ],
    "configuration": {
      "title": "Translator",
      "properties": {
        "translator.isLoginRequired": {
          "type": "boolean",
          "default": false,
          "description": "is creating a translation requires login token"
        },
        "translator.loginURL": {
          "type": "string",
          "description": "The POST URL to use for login",
          "format": "uri",
          "scope": "window",
          "when": "config.translator.isLoginRequired"
        },
        "translator.username": {
          "type": "string",
          "description": "The Username/Email to use for login",
          "scope": "window",
          "when": "config.translator.isLoginRequired"
        },
        "translator.password": {
          "type": "string",
          "description": "The Password to use for login",
          "scope": "window",
          "when": "config.translator.isLoginRequired"
        },
        "translator.createURL": {
          "type": "string",
          "description": "The POST URL to use for creating a new translation",
          "scope": "window",
          "format": "uri"
        },
        "translator.translationsURL": {
          "type": "string",
          "description": "The GET URL to use for downloading a translation",
          "format": "uri",
          "scope": "window"
        },
        "translator.tag": {
          "type": "string",
          "description": "The tag to use for the translation (workspace)",
          "scope": "window"
        },
        "translator.defaultLanguage": {
          "type": "string",
          "description": "The default language to use for the translation (workspace)",
          "default": "en",
          "pattern": "^[a-z]{2}$",
          "scope": "window"
        },
        "translator.extraHeaders": {
          "type": "object",
          "description": "Extra headers to send with the request",
          "scope": "window"
        }
      },
      "configurationSortOrder": [
        "translator.translationsURL",
        "translator.createURL",
        "translator.defaultLanguage",
        "translator.isLoginRequired",
        "translator.loginURL",
        "translator.username",
        "translator.password",
        "translator.tag"
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "dot-object": "^2.1.4",
    "https": "^1.0.0",
    "js-convert-case": "^4.2.0"
  }
}